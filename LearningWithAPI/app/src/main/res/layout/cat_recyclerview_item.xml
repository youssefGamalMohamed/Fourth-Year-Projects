<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/grey_whitesmoke"
        app:cardCornerRadius="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >


            <ImageView
                android:id="@+id/cat_image"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Name : "
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Any Thing"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Origin :"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/cat_origin"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Any Thing"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Temperature : "
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/cat_temperature"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Any Thing"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Life Span : "
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/cat_life_span"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Any Thing"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Description : "
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/cat_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my description is any any any any any any any any any any any any any any any any any any"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>