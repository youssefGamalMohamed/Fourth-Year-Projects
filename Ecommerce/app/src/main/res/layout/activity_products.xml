<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ProductsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_search_for_product"
        app:layout_constraintVertical_bias="0.0" />


    <RelativeLayout
        android:id="@+id/button_with_count_badge_relative_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.178"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="651dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_cart_that_in_productactivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_button_for_camera_and_shoppingcart_and_barcode"
                        app:srcCompat="@drawable/shoppingcarticon2"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_count_badge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_badge_count_for_cartbutton"
                    />
    </RelativeLayout>



    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/custom_button_for_camera_and_shoppingcart_and_barcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_voice"
        app:srcCompat="@drawable/cameraicon"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/btn_voice"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="508dp"
        android:background="@drawable/custom_button_for_camera_and_shoppingcart_and_barcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voiceicon"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/ed_search_for_product"
        android:layout_width="390dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/mysearchicon"
        android:background="@drawable/button_and_editext_custom_shape"
        android:ems="10"
        android:hint="Search For Product"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>